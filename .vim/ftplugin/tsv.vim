" Specific settings fro  tab-separated value files

" Use 8 spaces to display tabs
setlocal shiftwidth=8

" Don't equate tabs and spaces when pressing <Tab> or <BS>
setlocal softtabstop=0

" Don't insert spaces for tabs
setlocal noexpandtab

" Don't wrap text when typing
setlocal textwidth=0

" Don't wrap displayed text
setlocal nowrap

